rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Authenticated users only
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Dedicated folders
    match /voiceMessages/{chatId}/{messageId} {
      // Only members of the chat (referenced from firestore) or simple auth check
      allow read, write: if request.auth != null;
    }
    
    match /media/{chatId}/{fileId} {
      allow read, write: if request.auth != null;
    }
    
    match /avatars/{groupId}/{fileId} {
      allow read, write: if request.auth != null;
    }
  }
}
